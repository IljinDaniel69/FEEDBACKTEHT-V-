<!DOCTYPE html>
<html lang="fi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tukipyynnöt</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <nav>
      <ul>
        <li><a href="/customers">Asiakkaat ja käyttäjät</a></li>
        <li><a href="/tickets">Tukipyynnöt</a></li>
        <li><a href="/feedback">Palaute</a></li>
        <li><a href="/logout">Kirjaudu ulos</a></li>
      </ul>
    </nav>

    <div class="container">
      <h1>Tukipyynnöt</h1>
      <table>
        <tr>
          <th>ID</th>
          <th>Kuvaus</th>
          <th>Asiakas</th>
          <th>Käsitelty</th>
          <th>Tila</th>
        </tr>
        <% tickets.forEach(ticket => { %>
        <tr>
          <td><a href="/support/<%= ticket.id %>"><%= ticket.id %></a></td>
          <td><%= ticket.description %></td>
          <td><%= ticket.customer_id %></td>
          <td><%= ticket.handled ? "Kyllä" : "Ei" %></td>
          <td><%= ticket.status %></td>
        </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
